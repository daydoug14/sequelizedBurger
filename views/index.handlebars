<h1>Eat Burgers!</h1>

<h2>Burgers that are available!</h2>

<ul>
  {{#each burgers}} {{#unless devour}} {{!-- {{this.burger_name}} --}}
  <li>
    Id: {{this.id}}
    <br> Name: {{this.burger_name}}

    <button class="change-devour" data-id="{{this.id}}" data-newdevour="{{this.devour}}">
      {{#if devour}}DEVOUR!{{else}}NOT DEVOUR!{{/if}}
    </button>

    <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
  </li>
  {{!-- {{> burgers/burger-block devour=true}} --}} {{/unless}} {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}} {{#if devour}}
  <li>
    Id: {{this.id}}
    <br> Name: {{this.burger_name}}

    <button class="change-devour" data-id="{{this.id}}" data-newdevour="{{this.devour}}">
      {{#if devour}}DEVOUR!{{else}}NOT DEVOUR!{{/if}}
    </button>

    <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
  </li>
  {{/if}} {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
